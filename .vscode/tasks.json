{
  "version": "2.0.0",
  "type": "shell",
  "command": "go",
  "cwd": "${workspaceFolder}",
  "tasks": [
    {
      "label": "Run project",
      "args": ["run", "."],
      "group": "build",
    },
    {
      "label": "Build project",
      "type": "shell",
      "command": "powershell",
      "args": [
        "${workspaceFolder}\\scripts\\build_windows.ps1",
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Install dependencies",
      "args": ["install", "-v", "./..."],
      "group": "build"
    },
    {
      "label": "Test project",
      "args": ["test", "-v", "./..."],
      "group": "test"
    }
  ]
}